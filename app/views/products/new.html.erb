<h1>The Shop</h1>
<h3>Add a New Product</h3>
<form action='/products' method='POST' role='form' class='col-md-4'>
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<div class='form-group'>
		<label for='category'>Category</label>
		<select name='product[category_id]'>
			<% @categories.each do |cat| %>
				<option value='<%= cat.id %>'><%= cat.category %></option>
			<% end %>
		</select>
	</div>
	<div class='form-group'>
		<label for='product'>Product</label>
		<input type='text' name='product[product]' class='form-control'>
	</div>
	<div class='form-group'>
		<label for='description'>Description</label>
		<input type='text' name='product[description]' class='form-control'>
	</div>
	<div class='form-group'>
		<label for='price'>Price</label>
		<input type='text' name='product[price]' class='form-control'>
	</div>
	<button type='submit' class='btn'>Create</button>
</form>

<a href='/'>Main Page</a>

<% if flash[:errors] %>
	<% flash[:errors].each do |err| %>
		<p><%= err %></p>
	<% end %>
<% end %>
